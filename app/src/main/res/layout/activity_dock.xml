<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <ImageView
        android:id="@+id/bottom_menu"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bottom_menu"
        app:layout_constraintWidth_percent="0.90"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/qr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/qrcode_solid"
        app:layout_constraintBottom_toBottomOf="@+id/upper_guideline"
        app:layout_constraintStart_toStartOf="@+id/bottom_menu"
        />

    <ImageButton
        android:id="@+id/invoices"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:text=""
        android:background="@drawable/receipt"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_menu"
        app:layout_constraintEnd_toStartOf="@id/add_invoice"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        />
    <ImageButton
        android:id="@+id/add_invoice"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text=""
        android:background="@drawable/plus_solid"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invoices"
        app:layout_constraintEnd_toStartOf="@id/inbox"
        app:layout_constraintVertical_bias="0.5"
        />
    <ImageButton
        android:id="@+id/inbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text=""
        android:background="@drawable/inbox_solid"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_invoice"
        app:layout_constraintEnd_toStartOf="@id/profile"
        app:layout_constraintVertical_bias="0.5"
        />
    <ImageButton
        android:id="@+id/profile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text=""
        android:background="@drawable/user_solid"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bottom_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottom_menu"
        app:layout_constraintStart_toEndOf="@+id/inbox"
        app:layout_constraintVertical_bias="0.5"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/currentFragment"
        android:name="com.example.ereceipt.InvoicesFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/upper_guideline"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        />


</androidx.constraintlayout.widget.ConstraintLayout>