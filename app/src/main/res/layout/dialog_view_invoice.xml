<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <View
        android:id="@+id/from_line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/to_line"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintVertical_bias="0.05"
        />
    <View
        android:id="@+id/to_line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintVertical_bias="0.05"
        />


    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />

    <TextView
        android:id="@+id/from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/from_line"
        app:layout_constraintStart_toStartOf="@id/from_line"/>

    <TextView
        android:id="@+id/to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/to_line"
        app:layout_constraintStart_toStartOf="@id/to_line"/>

    <TextView
        android:id="@+id/buyer_nif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nif"
        app:layout_constraintTop_toBottomOf="@id/to_text"
        app:layout_constraintStart_toStartOf="@id/to_line"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />
    <TextView
        android:id="@+id/buyer_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintTop_toBottomOf="@id/buyer_nif"
        app:layout_constraintStart_toStartOf="@id/to_line"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />
    <TextView
        android:id="@+id/buyer_postal_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/postal_code"
        app:layout_constraintTop_toBottomOf="@id/buyer_address"
        app:layout_constraintStart_toStartOf="@id/to_line"
        app:layout_constraintEnd_toStartOf="@id/buyer_city"
        />
    <TextView
        android:id="@+id/buyer_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city"
        app:layout_constraintTop_toBottomOf="@id/buyer_address"
        app:layout_constraintStart_toEndOf="@id/buyer_postal_code"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />
    <TextView
        android:id="@+id/buyer_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/country"
        app:layout_constraintTop_toBottomOf="@id/buyer_postal_code"
        app:layout_constraintStart_toStartOf="@id/to_line"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />
    <TextView
        android:id="@+id/buyer_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@id/buyer_country"
        app:layout_constraintStart_toStartOf="@id/to_line"
        app:layout_constraintEnd_toEndOf="@id/to_line"
        />

    <TextView
        android:id="@+id/seller_nif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nif"
        app:layout_constraintTop_toBottomOf="@id/from_text"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="@id/from_line"
        />
    <TextView
        android:id="@+id/seller_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintTop_toBottomOf="@id/seller_nif"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="@id/from_line"
        />
    <TextView
        android:id="@+id/seller_postal_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/postal_code"
        app:layout_constraintTop_toBottomOf="@id/seller_address"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toStartOf="@id/seller_city"
        />
    <TextView
        android:id="@+id/seller_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city"
        app:layout_constraintTop_toBottomOf="@id/seller_address"
        app:layout_constraintStart_toEndOf="@id/seller_postal_code"
        app:layout_constraintEnd_toEndOf="@id/from_line"
        />
    <TextView
        android:id="@+id/seller_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/country"
        app:layout_constraintTop_toBottomOf="@id/seller_postal_code"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="@id/from_line"
        />
    <TextView
        android:id="@+id/seller_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@id/seller_country"
        app:layout_constraintStart_toStartOf="@id/from_line"
        app:layout_constraintEnd_toEndOf="@id/from_line"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/seller_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tax base: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintEnd_toStartOf="@id/first"/>

    <TextView
        android:id="@+id/taxes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Taxes: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintEnd_toStartOf="@id/second"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: "
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintEnd_toStartOf="@id/third"/>

    <TextView
        android:id="@+id/taxes_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tax"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintStart_toStartOf="@id/second"/>
    <TextView
        android:id="@+id/subtotal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="subtotal"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintStart_toStartOf="@id/third"/>

    <TextView
        android:id="@+id/tax_base_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="base"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_recycler"
        app:layout_constraintStart_toStartOf="@id/first"/>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:text="Close"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/taxes_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>